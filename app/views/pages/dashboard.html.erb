<div class="profile-classes col-lg-7 col-md-12 col-sm-12">
  <ul class="nav nav-pills nav-fill mb-3" id="pills-tab" role="tablist">
    <% ProjectInterest::STATE.each do |state| %>
      <li class="nav-item">
        <a class="nav-link <%= state == 'confirmada' ? 'active' : '' %>" id="pills-<%= state %>-tab" data-toggle="pill" href="#pills-<%= state %>" role="tab" aria-controls="pills-<%= state %>" aria-selected="true"><%= state.capitalize %>s</a>
      </li>
    <% end %>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <% ProjectInterest::STATE.each do |state| %>
      <% if current_user.projects.any? %>
        <%= render "shared/status", state: state, interests: current_user.dev_interests.select { |interest| interest.status == state } %>
      <% else %>
        <%= render "shared/status", state: state, interests: current_user.project_interests.select { |interest| interest.status == state } %>
      <% end %>
    <% end %>
  </div>
</div>
