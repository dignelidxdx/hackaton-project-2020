    <div class="container py-5">
      <div class="row align-items-center justify-content-center">
        <div class="col-md-8 text-center">
          <%= image_tag "landing_man.png" %>
          <h1 class="text-white mb-5 landing-header">Una nueva forma de potenciar tu carrera generando impacto social</h1>
          <%= link_to "¡Quiero ver proyectos!", projects_path, class: "btn btn-outline-white rounded-xl" %>
        </div>
      </div>
    </div>
    <div class="shape-container shape-position-bottom">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
