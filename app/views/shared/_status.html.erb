<div class="tab-pane fade show <%= state == 'confirmada' ? 'active' : '' %>" id="pills-<%= state %>" role="tabpanel" aria-labelledby="pills-<%= state %>-tab">
<% unless current_user.projects.any? %>
  <% interests.each do |interest| %>
  <div class="d-flex align-items-center shadow-lg mb-5 bg-white rounded">
    <div class="flex-grow-1">
      <%= link_to project_path(interest.project), class:"d-flex align-items-center" do %>
      <%= cl_image_tag interest.project.photos[0].key, class:"", width:"150" %>
      <div class="m-0 ml-2">
        <h2 class="m-0 h4"><%= interest.project.name %></h2>
        <p class="m-0 h6 text-muted"><small><strong><%= interest.project.company.upcase %></strong></small></p>
      </div>
      <% end %>
    </div>
    <div class="flex-grow-0">
      <% if state == 'pendiente' %>
      <%= link_to "Cancelar", project_interest_path(interest, project_interest: { status: "cancelada" }), method: :patch, class: "btn btn-outline-danger btn-sm mr-3" %>
      <% elsif state == 'cancelada' %>
      <%= link_to "Borrar", project_interest_path(interest), method: :delete, class: "btn btn-outline-primary btn-sm mr-3", data: { confirm: "¿Estás seguro?" } %>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
</div>
